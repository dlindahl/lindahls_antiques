<h1>Antiques</h1>

<%= link_to "New Antique", new_admin_antique_path %>

<table>
  <thead>
    <tr>
      <th>SKU</th>
      <th>Name</th>
      <th colspan="3">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <%- @antiques.each do |antique| -%>
      <tr>
        <td>
          <%= link_to antique.sku, admin_antique_path(antique) %>
        </td>
        <td>
          <%= link_to antique.name, admin_antique_path(antique) %>
        </td>
        <td>
          <nav>
            <%= link_to 'Edit', edit_admin_antique_path(antique) %>
            <%= link_to 'Destroy', admin_antique_path(antique), :confirm => 'Are you sure?', :method => :delete %>
          </nav>
        </td>
      </tr>
    <%- end -%>
    <tr>
  </tbody>
</table>
