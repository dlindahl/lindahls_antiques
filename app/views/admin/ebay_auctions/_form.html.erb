<%= semantic_form_for [:admin, @antique, @ebay_auction] do |f| %>
  <%= f.inputs do %>
    <%= f.input :listing_status, :as => :uneditable %>
    <%= f.input :title %>
    <%= f.input :description, :hint => ("Write the description using " + link_to("Markdown", "http://daringfireball.net/projects/markdown/basics") + " format.").html_safe %>
  <% end %>
  <%= f.inputs do %>
    <%= f.input :start_price %>
    <%= f.input :current_price, :as => :uneditable %>
    <%= f.input :reserve_price %>
    <%= f.input :buy_it_now_price %>
    <%= f.input :shipping_price %>
  <% end %>
  <%= f.inputs do %>
    <%= f.input :bids, :as => :uneditable %>
    <%= f.input :reserve_met, :as => :uneditable, :label => "Reserve Met?" %>
  <% end %>
  <%= f.inputs do %>
    <%= f.input :length, :as => :select, :collection => [ ['1 Day', 1], ['3 Days', 3], ['5 Days', 5], ['7 Days', 7], ['10 Days',10] ], :include_blank => 'Select a listing length...' %>
    <%= f.input :start_time %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button %>
    <%= content_tag(:li, (link_to I18n.t('active_admin.cancel'), { :action => :index }, {}), :class => 'cancel') %>
  <% end %>
<% end %>